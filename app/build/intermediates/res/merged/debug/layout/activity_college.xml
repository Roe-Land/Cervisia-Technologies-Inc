<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/college"
    tools:context="com.example.dennis.studlife.CollegeActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8d6e63"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar7"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:animationResolution="1"
        android:max="100"

        android:progressTint="#0000ff"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar8"
        android:layout_below="@+id/progressBar7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:animationResolution="1"
        android:max="100"

        android:progressTint="#00ff00"/>


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar9"
        android:layout_below="@+id/progressBar8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:animationResolution="1"
        android:max="100"

        android:progressTint="#ff0000"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@id/progressBar9"
        android:background="@drawable/hart"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/progressBar8"
        android:background="@drawable/smiley"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:background="@drawable/bliksem"
        android:layout_marginTop="1dp"
        android:layout_toLeftOf="@id/progressBar7"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:id="@+id/studanimation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/studanimation"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:id="@+id/mouth"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/water"
        android:background="@drawable/water"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/energy"
        android:background="@drawable/energie"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/water"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/coke"
        android:background="@drawable/cola"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/energy"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/crisps"
        android:background="@drawable/chips"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/coke"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bread"
        android:background="@drawable/brood"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/crisps"/>



    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:ems="10"
        android:id="@+id/money2"
        android:layout_toRightOf="@+id/studyPoints"
        android:layout_toEndOf="@+id/studyPoints" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/studyPoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/socialPoints"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/studyPoints" />

    <Spinner
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/study"
        android:layout_below="@+id/studanimation"
        android:layout_centerHorizontal="true"
        android:entries="@array/study"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner2"
        android:entries="@array/college"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/bread"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studeren: "
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:layout_below="@+id/studanimation"
        android:layout_alignLeft="@+id/energy"
        android:layout_alignStart="@+id/energy" />


</RelativeLayout>
